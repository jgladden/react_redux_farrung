{
    "parser": "babel-eslint",
    "plugins": [
        "react"
    ],
    "extends": [
        "eslint:recommended", 
        "plugin:react/recommended"
    ],
    "rules": {
        "quotes": [2, "single"],
        "eqeqeq": 0,
        "strict": 0,
        "indent": [2, 2],
        "linebreak-style": [2, "unix"],
        "semi": [2,"always"],
        "no-undef": 0
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "mocha": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 6,
        "ecmaFeatures": {
          "jsx": true
        }
    },
    "globals": {
    },
}
